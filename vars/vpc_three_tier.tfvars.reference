# AWS VARIABLES 
region      = ""

# FOR ADDING TAGS ON ALL RESOURCES
additional_tags = {
  key1 = "value1"
  key2 = "value2"
}

# VPC VARIABLES
environment = ""   // Mandatory as used for tagging resources and appended to names.
name        = ""   // Mandatory as used for tagging resources and appended to names. 
create_cis_vpc         = false
vpc_cidr               = "172.10.0.0/16"
public_subnets         = ["172.10.1.0/24", "172.10.2.0/24", "172.10.3.0/24"]
application_subnets    = ["172.10.101.0/24", "172.10.102.0/24", "172.10.103.0/24"]     # private subnets
database_subnets       = ["172.10.104.0/24", "172.10.105.0/24", "172.10.106.0/24","172.10.107.0/24","172.10.108.0/24","172.10.109.0/24"]     # private subnets
create_database_subnet_route_table    = true
create_database_nat_gateway_route     = true
enable_nat_gateway     = true
single_nat_gateway     = true
one_nat_gateway_per_az = false

# BASTION HOST VARIABLES
bastion_host_enabled       = true
bastion_host_instance_type = "t3a.small"

# FLOW LOG VARIABLES
enable_flow_log             = true
flow_log_max_aggregation_interval = 60     # in seconds
flow_log_cloudwatch_log_group_retention_in_days = 90